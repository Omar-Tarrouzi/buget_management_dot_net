@model App_de_gestion_de_buget_version2.Models.Wallet

@{
    ViewData["Title"] = "Modifier mon portefeuille";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="WalletId" />

    <div class="mb-3">
        <label asp-for="Balance" class="form-label"></label>
        <input asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Retour</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


