@{
    ViewData["Title"] = "Accueil";
    var hasUsers = ViewData["HasUsers"] as bool? ?? false;
}

<div class="text-center mt-5">

    <h1 class="display-4">Bienvenue dans l'application de gestion de budget</h1>

    <p class="lead mt-3">
        Utilisez le menu pour gérer vos catégories, transactions et budgets.
    </p>

    @if (!hasUsers)
    {
        <p class="text-danger">Aucun utilisateur trouvé. Créez un compte administrateur ou connectez-vous.</p>
        <a class="btn btn-success mt-3 me-2" href="/Identity/Account/Register">Créer un compte</a>
        <a class="btn btn-primary mt-3" href="/Identity/Account/Login">Se connecter</a>
    }
    else
    {
        <a class="btn btn-primary mt-3" href="/Category/Index">Voir les catégories</a>
    }

</div>
