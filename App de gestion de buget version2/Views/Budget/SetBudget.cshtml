@model App_de_gestion_de_buget_version2.Models.ViewModels.SetBudgetViewModel

@{
    ViewData["Title"] = "Définir le budget";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="SetBudget" method="post">
        <!-- Main Budget Fields -->
        <input type="hidden" asp-for="Budget.BudgetId" />

        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Budget Global</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Budget.Year" class="form-label">Année</label>
                        <input asp-for="Budget.Year" class="form-control" />
                        <span asp-validation-for="Budget.Year" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Budget.Month" class="form-label">Mois</label>
                        <input asp-for="Budget.Month" class="form-control" />
                        <span asp-validation-for="Budget.Month" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Budget.PlannedAmount" class="form-label">Montant Global Prévu</label>
                        <div class="input-group">
                            <span class="input-group-text">Dhs</span>
                            <input asp-for="Budget.PlannedAmount" class="form-control" />
                        </div>
                        <span asp-validation-for="Budget.PlannedAmount" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Limites par catégorie (Optionnel)</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Définissez un plafond pour certaines catégories. Laissez vide pour ne pas mettre de limite.</p>
                
                <div class="row">
                    @for (int i = 0; i < Model.CategoryBudgets.Count; i++)
                    {
                        <div class="col-md-6 mb-3">
                            <input type="hidden" asp-for="CategoryBudgets[i].CategoryId" />
                            <input type="hidden" asp-for="CategoryBudgets[i].CategoryName" />
                            
                            <label asp-for="CategoryBudgets[i].Limit" class="form-label">
                                @Model.CategoryBudgets[i].CategoryName
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">€</span>
                                <input asp-for="CategoryBudgets[i].Limit" type="number" step="0.01" class="form-control" placeholder="Illimité" />
                            </div>
                        </div>
                    }
                    @if (Model.CategoryBudgets.Count == 0)
                    {
                        <div class="col-12 text-center text-muted">
                            Aucune catégorie trouvée. Créez des catégories pour leur assigner des limites.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">Retour</a>
            <button type="submit" class="btn btn-success btn-lg">Enregistrer le budget</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
