@model App_de_gestion_de_buget_version2.Models.Category

<h2>Modifier la catégorie</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="CategoryId" />

    <div class="form-group">
        <label>Nom de la catégorie</label>
        <input asp-for="Nom" class="form-control" />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <button class="btn btn-primary mt-3" type="submit">Mettre à jour</button>
    <a class="btn btn-secondary mt-3" asp-action="Index" asp-controller="Category">Retour</a>
</form>
