@model App_de_gestion_de_buget_version2.Models.ViewModels.TransactionIndexViewModel

@{
    ViewData["Title"] = "Transactions";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <div>
            <a class="btn btn-outline-dark me-2" asp-controller="DataExport" asp-action="Index">
                <i class="bi bi-arrow-down-up"></i> Import / Export
            </a>
            <a class="btn btn-primary" asp-action="Create">Créer une transaction</a>
        </div>
    </div>

    @if (Model.Transactions != null && Model.Transactions.Any())
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-4 mb-3">
                <div class="dashboard-card">
                    <h3>Total Revenus</h3>
                    <div class="value text-success">@Model.TotalIncomes.ToString("C")</div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="dashboard-card">
                    <h3>Total Dépenses</h3>
                    <div class="value text-danger">@Model.TotalExpenses.ToString("C")</div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="dashboard-card">
                    <h3>Solde Net</h3>
                    <div class="value @(Model.TotalIncomes - Model.TotalExpenses >= 0 ? "text-success" : "text-danger")">
                        @((Model.TotalIncomes - Model.TotalExpenses).ToString("C"))
                    </div>
                </div>
            </div>
        </div>

        <!-- Category Breakdown Chart -->
        @if (Model.CategoryBreakdown != null && Model.CategoryBreakdown.Any())
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            Répartition des dépenses par catégorie
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="chart-container">
                                        <canvas id="categoryChart"></canvas>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Catégorie</th>
                                                <th>Montant</th>
                                                <th>Pourcentage</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var categoryColors = new[] { 
                                                    "#6366f1", "#8b5cf6", "#ec4899", "#f59e0b", "#10b981",
                                                    "#3b82f6", "#ef4444", "#14b8a6", "#f97316", "#a855f7",
                                                    "#06b6d4", "#84cc16", "#eab308", "#f43f5e", "#6366f1"
                                                };
                                                var colorIndex = 0;
                                            }
                                            @foreach (var item in Model.CategoryBreakdown)
                                            {
                                                var percentage = Model.TotalExpenses > 0 ? (item.Total / Model.TotalExpenses) * 100 : 0;
                                                var color = categoryColors[colorIndex % categoryColors.Length];
                                                colorIndex++;
                                                <tr>
                                                    <td><strong>@item.CategoryName</strong></td>
                                                    <td>@item.Total.ToString("C")</td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="progress flex-grow-1 me-2" style="height: 20px;">
                                                                <div class="progress-bar" 
                                                                     style="width: @percentage%; background-color: @color;"
                                                                     role="progressbar">
                                                                </div>
                                                            </div>
                                                            <span>@percentage.ToString("F1")%</span>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    <!-- PDF Export Controls -->
    <div class="d-flex justify-content-end mb-3">
        <button onclick="generatePDF()" class="btn btn-outline-primary">
            <i class="bi bi-file-earmark-pdf"></i> Exporter la sélection en PDF
        </button>
    </div>

    @if (Model.Transactions == null || !Model.Transactions.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <h4 class="text-muted mb-3">Aucune transaction</h4>
                <p class="text-muted mb-4">Commencez à enregistrer vos transactions pour suivre vos dépenses et revenus</p>
                <a class="btn btn-primary" asp-action="Create">Créer une transaction</a>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                Liste des transactions
            </div>
            <div class="card-body">
                <table class="table table-hover" id="transactionsTable">
                    <thead>
                        <tr>
                            <th width="40"><input type="checkbox" id="selectAll" onclick="toggleAll(this)"></th>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Type</th>
                            <th>Montant</th>
                            <th>Catégorie</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Transactions)
                        {
                            <tr>
                                <td><input type="checkbox" class="transaction-checkbox" value="@item.TransactionId"></td>
                                <td>@item.Date?.ToString("dd/MM/yyyy")</td>
                                <td>@(item.Description ?? "Sans description")</td>
                                <td>
                                    @if (item.Type == App_de_gestion_de_buget_version2.Models.TransactionType.Income)
                                    {
                                        <span class="badge bg-success">Revenu</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Dépense</span>
                                    }
                                </td>
                                <td>
                                    <span class="@(item.Type == App_de_gestion_de_buget_version2.Models.TransactionType.Income ? "text-success" : "text-danger") fw-bold">
                                        @(item.Type == App_de_gestion_de_buget_version2.Models.TransactionType.Income ? "+" : "-")@item.Montant.ToString("C")
                                    </span>
                                </td>
                                <td>
                                    @if (item.Category != null)
                                    {
                                        <span class="badge bg-secondary">@item.Category.Nom</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sans catégorie</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center flex-wrap gap-1">
                                        <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.TransactionId" title="Détails"><i class="bi bi-eye"></i></a>
                                        <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.TransactionId" title="Modifier"><i class="bi bi-pencil"></i></a>
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.TransactionId" title="Supprimer"><i class="bi bi-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <p class="mt-4">
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Retour</a>
    </p>
</div>

@section Scripts {
    <!-- jsPDF and AutoTable -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.29/jspdf.plugin.autotable.min.js"></script>

    <script>
        function toggleAll(source) {
            checkboxes = document.querySelectorAll('.transaction-checkbox');
            for(var i=0, n=checkboxes.length;i<n;i++) {
                checkboxes[i].checked = source.checked;
            }
        }

        function generatePDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            
            // Collect Data
            const rows = [];
            const checkboxes = document.querySelectorAll('.transaction-checkbox:checked');
            
            if (checkboxes.length === 0) {
                alert("Veuillez sélectionner au moins une transaction.");
                return;
            }

            checkboxes.forEach(chk => {
                const tr = chk.closest('tr');
                const cells = tr.querySelectorAll('td');
                // Skip the checkbox cell (index 0) and Actions cell (last index)
                const rowData = [
                    cells[1].innerText, // Date
                    cells[2].innerText, // Description
                    cells[3].innerText, // Type
                    cells[4].innerText, // Montant
                    cells[5].innerText  // Categorie
                ];
                rows.push(rowData);
            });

            // Add Header
            doc.setFontSize(18);
            doc.setTextColor(33, 137, 126); // Dark Cyan
            doc.text("Rapport de Transactions - Chouette Finance", 14, 22);
            doc.setFontSize(11);
            doc.setTextColor(100);
            doc.text(`Généré le: ${new Date().toLocaleDateString()}`, 14, 30);

            // Generate Table
            doc.autoTable({
                head: [['Date', 'Description', 'Type', 'Montant', 'Catégorie']],
                body: rows,
                startY: 40,
                theme: 'grid',
                headStyles: {
                    fillColor: [33, 137, 126], // Dark Cyan (Blue-ish Teal) as requested
                    textColor: 255,
                    fontStyle: 'bold'
                },
                styles: {
                    textColor: 50 // Normal color for body
                },
                alternateRowStyles: {
                    fillColor: [240, 248, 255] // Very light blue for alternate rows
                }
            });

            doc.save('transactions_chouette_finance.pdf');
        }
    </script>
    @if (Model.CategoryBreakdown != null && Model.CategoryBreakdown.Any())
    {
        <script>
            const categoryData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
                Model.CategoryBreakdown.Select(c => new { 
                    label = c.CategoryName, 
                    value = (double)c.Total,
                    percentage = Model.TotalExpenses > 0 ? (double)((c.Total / Model.TotalExpenses) * 100) : 0
                })
            ));

            const totalExpenses = @Model.TotalExpenses;

            // Generate colors for each category
            const colors = [
                '#6366f1', '#8b5cf6', '#ec4899', '#f59e0b', '#10b981',
                '#3b82f6', '#ef4444', '#14b8a6', '#f97316', '#a855f7',
                '#06b6d4', '#84cc16', '#eab308', '#f43f5e', '#6366f1'
            ];

            const ctx = document.getElementById('categoryChart');
            if (ctx) {
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: categoryData.map(c => c.label),
                        datasets: [{
                            data: categoryData.map(c => c.value),
                            backgroundColor: colors.slice(0, categoryData.length),
                            borderWidth: 3,
                            borderColor: '#fff'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                position: 'right',
                                labels: {
                                    padding: 15,
                                    font: {
                                        size: 12
                                    },
                                    usePointStyle: true
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        const label = context.label || '';
                                        const value = context.parsed || 0;
                                        const percentage = ((value / totalExpenses) * 100).toFixed(1);
                                        return label + ': ' + value.toLocaleString('fr-FR', { style: 'currency', currency: 'EUR' }) + ' (' + percentage + '%)';
                                    }
                                }
                            }
                        }
                    }
                });
            }
        </script>
    }
}


