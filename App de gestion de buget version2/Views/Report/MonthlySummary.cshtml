@model App_de_gestion_de_buget_version2.Models.ViewModels.MonthlyBudgetSummaryViewModel

@{
    ViewData["Title"] = "Résumé mensuel";
}

<div class="container-fluid py-4">
    <div class="report-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>@ViewData["Title"]</h2>
                <p class="text-muted mb-0">
                    <i class="bi bi-calendar3 me-2"></i>
                    Période : @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.Month) @Model.Year
                </p>
            </div>
            <a class="btn btn-outline-purple" asp-controller="Home" asp-action="Index">
                <i class="bi bi-arrow-left me-2"></i>Retour au Wallet
            </a>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <!-- Budget Card -->
        <div class="col-md-3">
            <div class="report-card">
                <div class="card-header">
                    <div class="card-header-icon"><i class="bi bi-piggy-bank-fill"></i></div>
                    Budget prévu
                </div>
                <div class="card-body">
                    <div class="report-icon-wrapper">
                        <img src="~/images/planned_icon.png" asp-append-version="true" alt="Planned" class="report-icon-img" />
                    </div>
                    <div class="value">@Model.PlannedAmount.ToString("C")</div>
                    <div class="progress" style="height: 10px; border-radius: 5px;">
                        <div class="progress-bar bg-purple" role="progressbar" style="width: 100%"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Incomes Card -->
        <div class="col-md-3">
            <div class="report-card">
                <div class="card-header text-success">
                    <div class="card-header-icon bg-success-light text-success"><i class="bi bi-graph-up-arrow"></i></div>
                    Incomes
                </div>
                <div class="card-body">
                    <div class="report-icon-wrapper">
                        <img src="~/images/incomes_icon.png" asp-append-version="true" alt="Incomes" class="report-icon-img" />
                    </div>
                    <div class="value text-success">@Model.Incomes.ToString("C")</div>
                </div>
            </div>
        </div>

        <!-- Expenses Card -->
        <div class="col-md-3">
            <div class="report-card">
                <div class="card-header text-danger">
                    <div class="card-header-icon bg-danger-light text-danger"><i class="bi bi-graph-down-arrow"></i></div>
                    Dépenses
                </div>
                <div class="card-body">
                    <div class="report-icon-wrapper">
                        <img src="~/images/expenses_icon.png" asp-append-version="true" alt="Expenses" class="report-icon-img" />
                    </div>
                    <div class="value text-danger">@Model.Expenses.ToString("C")</div>
                </div>
            </div>
        </div>

        <!-- Remaining Card -->
        <div class="col-md-3">
            <div class="report-card">
                <div class="card-header text-primary">
                    <div class="card-header-icon bg-primary-light text-primary"><i class="bi bi-wallet2"></i></div>
                    Reste
                </div>
                <div class="card-body">
                    <div class="report-icon-wrapper">
                        <img src="~/images/remaining_icon.png" asp-append-version="true" alt="Remaining" class="report-icon-img" />
                    </div>
                    <div class="value">@Model.Remaining.ToString("C")</div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-outline-purple {
        color: var(--purple-primary);
        border-color: var(--purple-primary);
        border-width: 2px;
        border-radius: 12px;
        padding: 0.6rem 1.5rem;
        font-weight: 600;
        transition: all 0.3s;
    }
    .btn-outline-purple:hover {
        background: var(--purple-gradient);
        color: white;
        border-color: transparent;
        transform: translateY(-2px);
    }
    .bg-purple { background-color: var(--purple-primary); }
    .bg-success-light { background-color: rgba(16, 185, 129, 0.1); }
    .bg-danger-light { background-color: rgba(239, 68, 68, 0.1); }
    .bg-primary-light { background-color: rgba(59, 130, 246, 0.1); }
</style>


