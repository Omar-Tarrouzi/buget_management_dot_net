@model IEnumerable<App_de_gestion_de_buget_version2.Models.Category>

<h2>Liste des catégories</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nom</td>
                <td>
                    <a href="/Category/Edit/@item.CategoryId">Modifier</a> |
                    <a href="/Category/Delete/@item.CategoryId">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
